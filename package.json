{
  "name": "create-frontend-app",
  "version": "1.0.0",
  "description": "A secure and modular CLI tool to create frontend projects with modern best practices",
  "main": "index.js",
  "bin": {
    "create-frontend-app": "./index.js"
  },
  "scripts": {
    "start": "node index.js",
    "test": "npx jest",
    "test:watch": "npx jest --watch",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "prepublishOnly": "npm run lint && npm run format && npm test"
  },
  "keywords": [
    "cli",
    "frontend",
    "react",
    "nextjs",
    "typescript",
    "tailwind",
    "mantine",
    "project-generator"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "figlet": "^1.6.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.1.1",
    "jest": "^29.7.0"
  },
  "files": [
    "index.js",
    "src/",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/create-frontend-app.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/create-frontend-app/issues"
  },
  "homepage": "https://github.com/your-username/create-frontend-app#readme"
