{
  "name": "@ashutoshdash/create-frontend-app",
  "version": "1.0.2",
  "description": "A secure and modular CLI tool to create frontend projects with modern best practices",
  "main": "index.js",
  "bin": {
    "create-frontend-app": "./index.js",
    "@ashutoshdash/create-frontend-app": "./index.js"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "node index.js",
    "test": "npx jest",
    "test:watch": "npx jest --watch",
    "test:coverage": "npx jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "build": "echo 'No build step required for CLI tool'",
    "prepublishOnly": "npm run lint && npm run format && npm test",
    "postinstall": "echo 'Installation complete! Run create-frontend-app --help to get started.'",
    "version:patch": "npm version patch && npm run changelog:update",
    "version:minor": "npm version minor && npm run changelog:update",
    "version:major": "npm version major && npm run changelog:update",
    "changelog:update": "echo 'Please update CHANGELOG.md with the new version details'",
    "changelog:view": "cat CHANGELOG.md",
    "changelog:add": "node scripts/changelog.js add",
    "changelog:show": "node scripts/changelog.js show"
  },
  "keywords": [
    "cli",
    "frontend",
    "react",
    "nextjs",
    "typescript",
    "tailwind",
    "mantine",
    "project-generator"
  ],
  "author": "ashutoshdash",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "dependencies": {
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.1.1",
    "jest": "^29.7.0"
  },
  "files": [
    "index.js",
    "src/",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ashutoshdash1999/create-frontend-app.git"
  },
  "bugs": {
    "url": "https://github.com/ashutoshdash1999/create-frontend-app/issues"
  },
  "homepage": "https://github.com/ashutoshdash1999/create-frontend-app#readme",
  "preferGlobal": true,
  "man": [
    "README.md"
  ],
  "config": {
    "publishConfig": {
      "access": "public"
    }
  }
}
